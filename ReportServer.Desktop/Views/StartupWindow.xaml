<mah:MetroWindow x:Class="ReportServer.Desktop.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportServer.Desktop.Views"
        xmlns:converters="clr-namespace:ReportServer.Desktop.Converters"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:docker="http://schemas.xceed.com/wpf/xaml/avalondock"
        mc:Ignorable="d"
       Title="ReportRedactor" MinHeight="800" MinWidth="1200" BorderThickness="1.5"
       BorderBrush="{DynamicResource AccentColorBrush}" GlowBrush="{DynamicResource AccentColorBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal" CanVerticallyScroll="True">
            <Button Content="Добавить задачу" Command="{Binding CreateTaskCommand}"/>
            <Button Content="Сохранить задачу" Command="{Binding SaveTaskCommand}"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}"/>
        </StackPanel>
        <docker:DockingManager Grid.Row="1">
            <docker:LayoutRoot>

                <docker:LayoutPanel Orientation="Vertical">
                    <docker:LayoutPanel>
                        <docker:LayoutDocumentPane DockWidth="Auto" DockHeight="Auto">
                            <docker:LayoutDocument Title="Tasks" CanClose="False">
                                <local:TaskListView/>
                            </docker:LayoutDocument>
                        </docker:LayoutDocumentPane>

                        <docker:LayoutPanel Orientation="Vertical">
                            <docker:LayoutDocumentPane DockWidth="Auto" DockHeight="Auto">
                                <docker:LayoutDocument Title="TaskInstances"  CanClose="False">
                                    <local:SelectedTaskInstancesView/>
                                </docker:LayoutDocument>
                            </docker:LayoutDocumentPane>

                            <docker:LayoutDocumentPane DockWidth="Auto" DockHeight="Auto">
                                <docker:LayoutDocument Title="SelectedTask"  CanClose="False">
                                    <local:SelectedTaskFullView/>
                                </docker:LayoutDocument>
                            </docker:LayoutDocumentPane>
                        </docker:LayoutPanel>

                    </docker:LayoutPanel>

                    <docker:LayoutAnchorablePane DockWidth="Auto" DockHeight="Auto">
                        <docker:LayoutAnchorable Title="SelectedInstance" CanClose="False" CanHide="False" CanAutoHide="False">
                            <local:SelectedInstanceFullView/>
                        </docker:LayoutAnchorable>
                    </docker:LayoutAnchorablePane>
                </docker:LayoutPanel>
            </docker:LayoutRoot>
        </docker:DockingManager>
    </Grid>
</mah:MetroWindow>

