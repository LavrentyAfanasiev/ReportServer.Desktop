<mah:MetroWindow x:Class="ReportServer.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:dock="http://schemas.xceed.com/wpf/xaml/avalondock"
        mc:Ignorable="d"
        d:DataContext="Shell"
        Title="{Binding Title}"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">

            <mah:DropDownButton 
                Content="File"
                Height="auto" 
                Margin="5"
                BorderThickness="1" BorderBrush="{DynamicResource AccentBaseColorBrush}">
                <mah:DropDownButton.Items>
                    <Button Command="{Binding SaveCommand}">Save</Button>
                    <Button Command="{Binding RefreshCommand}">Refresh</Button>
                </mah:DropDownButton.Items>
            </mah:DropDownButton>

            <mah:DropDownButton 
                Content="Edit"
                Height="auto" 
                ItemsSource="{Binding Entities}"
                Margin="5"
                BorderThickness="1" BorderBrush="{DynamicResource AccentBaseColorBrush}">
                <mah:DropDownButton.Items>
                    <Button Command="{Binding CreateTaskCommand}">Add Task</Button>
                    <Button Command="{Binding CreateReportCommand}">Add Report</Button>
                </mah:DropDownButton.Items>
            </mah:DropDownButton>
        </StackPanel>

        <dock:DockingManager 
        Grid.Row="1"
        Name="DockingManager"
        ActiveContentChanged="ActiveContentChanged">
        </dock:DockingManager>
    </Grid>
</mah:MetroWindow>







