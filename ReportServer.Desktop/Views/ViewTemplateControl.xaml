<UserControl x:Class="ReportServer.Desktop.Views.ViewTemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReportServer.Desktop"
             xmlns:converters="clr-namespace:ReportServer.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Button Panel.ZIndex="1" Width="40" Margin="0" Command="{Binding OpenViewTemplateWindowCommand}" HorizontalAlignment="Right" Visibility="{Binding SelectedReport.ReportType,Converter={converters:ReportTypeToVisiblity}}">...</Button>
            <TextBox Visibility="{Binding SelectedReport.ReportType,Converter={converters:ReportTypeToVisiblity}}" Text="{Binding SelectedReport.ViewTemplate}"/>
            <ComboBox Visibility="{Binding SelectedReport.ReportType,Converter={converters:AntiReportTypeToVisiblity}}" HorizontalAlignment="Stretch" ItemsSource="{Binding ViewTemplates}" SelectedValue="{Binding SelectedReport.ViewTemplate}" />
        </Grid>
    </Grid>
</UserControl>
